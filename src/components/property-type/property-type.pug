mixin property-type
  #property-type-wrapper.property-type-wrapper-lg
    input(type='hidden', id='type', name='type', value='', class="type-lg")
    .dropdown
      button.btn.btn-outline-secondary.dropdown-toggle.type-toggle(type='button', data-bs-toggle='dropdown', aria-expanded='false')
        span.type-toggle-label 
          img(src=require("@/assets/images/icons/property-type.svg"))
          span.label Property Type
          span.initial-label(style="display: none;") Property Type
        img.down-img(src=require("@/assets/images/icons/down.png"))
      ul.dropdown-menu.dropdown-menu-tab
        #typeTabContent.tab-content
          .row.icon-row.tab-content-wrap 
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='condo', data-label='Condo')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/condo-logo.svg") alt='image')
                span Condo  
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='apartment', data-label='Apartment')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/apartment-logo.svg") alt='image')
                span Apartment
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='house', data-label='House')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/house-logo.svg") alt='image')
                span House
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='land', data-label='Land')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/land-logo.svg") alt='image')
                span Land
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='hotel and restaurant', data-label='Hotel/ Restaurant')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/hotel-logo.svg") alt='image')
                span Hotel/ Restaurant
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='shop and office', data-label='Shop/ Office')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/shop-logo.svg") alt='image')
                span Shop/ Office
            .col-6.col-md-4.col-lg-3
              button.icon-wrapper.btn.btn-outline-secondary(type='button', data-value='industrial zone', data-label='Industrial Zone')
                .icon
                  img.img-fluid(src=require("@/assets/images/icons/industry-logo.svg") alt='image')
                span Industrial Zone
  #property-type-wrapper-sm
    .input-group.icon-left
      label.input-group-text(for=`type`)
        img(src=require("@/assets/images/icons/property-type.svg"))
      select.form-select.type-sm(name=`type`, id=`type`, aria-label='type', aria-describedby='type')
        option(value='') Property Type
        option(value='condo') Condo
        option(value='apartment') Apartment
        option(value='house') House
        option(value='land') Land
        option(value='hotel and restaurant') Hotel/ Restaurant
        option(value='shop and office') Shop/ Office
        option(value='industrial zone') Industrial Zone